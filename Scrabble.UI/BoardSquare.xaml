<UserControl x:Class="Scrabble.UI.BoardSquare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40" BorderBrush="Black" BorderThickness="1" Background="White">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="InterestingSquare" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Gray" Offset="0"></GradientStop>
            <GradientStop Color="Transparent" Offset="0.5"></GradientStop>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="HoverSquare" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkOrange" Offset="0"></GradientStop>
            <GradientStop Color="LightYellow" Offset="0.5"></GradientStop>
        </LinearGradientBrush>
                           
    </UserControl.Resources>
    <Canvas Height="40" Width="40" x:Name="SquareContainer" Background="{DynamicResource InterestingSquare}">
            
    </Canvas>
</UserControl>
