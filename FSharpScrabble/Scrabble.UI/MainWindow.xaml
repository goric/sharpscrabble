<Window x:Class="Scrabble.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sharp Scrabble" Height="700" Width="600"
        xmlns:ui="clr-namespace:Scrabble.UI">
    <Grid x:Name="Layout" Background="Gray">
      <Grid.RowDefinitions>
        <RowDefinition Height="600"></RowDefinition>
        <RowDefinition Height="40"></RowDefinition>
        <RowDefinition Height="40"></RowDefinition>
      </Grid.RowDefinitions>
      <ui:Board x:Name="GameBoard" Grid.Row="0"></ui:Board>
      <ui:Tiles x:Name="Player1Tiles" Grid.Row="1"></ui:Tiles>
      <ui:Tiles x:Name="Player2Tiles" Grid.Row="2"></ui:Tiles>
    </Grid>
</Window>
