<Window x:Class="Scrabble.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sharp Scrabble" Height="740" Width="624"
        xmlns:ui="clr-namespace:Scrabble.UI">
    <Grid x:Name="Layout" Background="{StaticResource BoardEdge}">
      <Grid.RowDefinitions>
        <RowDefinition Height="600"></RowDefinition>
        <RowDefinition Height="50"></RowDefinition>
        <RowDefinition Height="50"></RowDefinition>
      </Grid.RowDefinitions>
      <ui:Board x:Name="GameBoard" Grid.Row="0"></ui:Board>
      <ui:Tiles x:Name="Player0Tiles" Grid.Row="1" PlayerName="Billy"></ui:Tiles>
      <ui:Tiles x:Name="Player1Tiles" Grid.Row="2" PlayerName="Jimmy"></ui:Tiles>
    </Grid>
</Window>
