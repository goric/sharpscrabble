<Window x:Class="Scrabble.UI.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sharp Scrabble" Height="740" Width="624"
        xmlns:ui="clr-namespace:Scrabble.UI">
    <Window.Resources>
        
        <ImageBrush x:Key="BoardEdge" ImageSource="images\vinyl.jpg"></ImageBrush>
    </Window.Resources>
    <Grid x:Name="Layout" Background="{StaticResource BoardEdge}">
      <Grid.RowDefinitions>
        <RowDefinition Height="600"></RowDefinition>
        <RowDefinition Height="50"></RowDefinition>
        <RowDefinition Height="50"></RowDefinition>
      </Grid.RowDefinitions>
      <ui:DisplayBoard x:Name="GameBoard" Grid.Row="0"></ui:DisplayBoard>
        <ui:Tiles x:Name="PlayerTiles" Grid.Row="1"></ui:Tiles>
        <StackPanel Orientation="Horizontal" x:Name="TurnControls" Grid.Row="2">
            <TextBlock x:Name="StatusBar" Text="Ready." Foreground="White" Width="200" VerticalAlignment="Center"></TextBlock>
            <Button x:Name="Done" Content="Done" Width="100" Margin="2"></Button>
            <Button x:Name="Pass" Content="Pass" Width="100" Margin="2"></Button>
            <Button x:Name="Dump" Content="Dump Letters" Width="100" Margin="2"></Button>
            
        </StackPanel>
    </Grid>
</Window>
